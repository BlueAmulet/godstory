//-----------------------------------------------------------------------------
// Structures                                                                  
//-----------------------------------------------------------------------------
struct ConnectData
{
    float4 position0  : TEXCOORD0;
};

struct Fragout
{
   float4 col : COLOR0;
};

//-----------------------------------------------------------------------------
// Main                                                                        
//-----------------------------------------------------------------------------
Fragout main( ConnectData IN, uniform float3 cam : register(c0) 
)
{
   Fragout OutCol = (Fragout)0;

   OutCol.col = distance(IN.position0.xyz , cam);
   return OutCol;
}